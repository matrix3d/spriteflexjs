package org.apache.royale.jewel.supportClasses.card
{
	import org.apache.royale.jewel.Label;
	
	/**
	 *  The CardTitle class is a header title for Cards that can be used inside CardHeader
	 *  or direclty inside Card.
	 *  
	 *  It adds some styling to labels used as titles for Cards.
	 *
	 *  @langversion 3.0
	 *  @playerversion Flash 10.2
	 *  @playerversion AIR 2.6
	 *  @productversion Royale 0.9.7
	 */
	public class CardTitle extends Label
	{
		/**
		 *  constructor.
		 *
		 *  @langversion 3.0
		 *  @playerversion Flash 10.2
		 *  @playerversion AIR 2.6
		 *  @productversion Royale 0.9.7
		 */
		public function CardTitle()
		{
			super();

			typeNames = "jewel label card-title";
		}
	}
}
